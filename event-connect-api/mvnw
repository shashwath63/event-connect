#!/bin/sh
# Maven Wrapper Script

set -e

# OS specific support.
cygwin=false;
mingw=false;
case "`uname`" in
  CYGWIN*) cygwin=true ;;
  MINGW*) mingw=true ;;
esac

# Find base directory
MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-$(cd "$(dirname "$0")" && pwd)}"
MAVEN_OPTS="${MAVEN_OPTS:-"-Xmx64m"}"
export MAVEN_OPTS

wrapperJarPath="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar"
wrapperUrl="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.2.0/maven-wrapper-3.2.0.jar"

# Download wrapper jar if missing
if [ ! -f "$wrapperJarPath" ]; then
    echo "Downloading Maven wrapper..."
    if command -v curl > /dev/null; then
        curl -fsSL -o "$wrapperJarPath" "$wrapperUrl"
    elif command -v wget > /dev/null; then
        wget -q -O "$wrapperJarPath" "$wrapperUrl"
    else
        echo "Error: Could not find 'curl' or 'wget' to download Maven wrapper jar."
        exit 1
    fi
fi

# Run Maven with the wrapper
exec java $MAVEN_OPTS \
  -classpath "$wrapperJarPath" \
  org.apache.maven.wrapper.MavenWrapperMain "$@"
